<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.un1.mapper.CommentMapper">
    <select id="getCommentsByAid" resultType="com.example.un1.pojo.Comment">
        select *
        from t_comment
        <where>
            id = #{id}
        </where>
    </select>
</mapper>
